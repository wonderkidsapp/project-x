{
  "expo": {
    "name": "HPWS HPDE",
    "slug": "hpws-hpde",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.hpws.hpde",
      "infoPlist": {
        "NSCameraUsageDescription": "HPWS uses the camera to detect obstacles for visually impaired users.",
        "NSMicrophoneUsageDescription": "HPWS uses the microphone for voice commands and ambient noise detection.",
        "NSLocationWhenInUseUsageDescription": "HPWS uses location data to provide context-aware safety alerts.",
        "NSMotionUsageDescription": "HPWS uses motion sensors to detect user movement and orientation for better hazard prediction.",
        "UIBackgroundModes": [
          "audio"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.hpws.hpde",
      "permissions": [
        "CAMERA",
        "RECORD_AUDIO",
        "WAKE_LOCK"
      ]
    },
    "plugins": [
      "expo-asset",
      [
        "expo-build-properties",
        {
          "ios": {
            "flipper": false,
            "newArchEnabled": false
          },
          "android": {
            "newArchEnabled": false
          }
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}